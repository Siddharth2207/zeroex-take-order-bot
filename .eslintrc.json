{
    "env": {
        "es6": true,
        "node": true,
        "commonjs": true
    },
    "root": true,
    
    "parserOptions": { "ecmaVersion": "latest" },
    "rules": {
        "semi": ["error", "always"],
        "indent": [
            "error",
            4,
            { 
                "VariableDeclarator": "first",
                "flatTernaryExpressions": true,
                "offsetTernaryExpressions": false
            }
        ],
        "max-len": [
            "error",
            { 
                "code": 100,
                "ignoreStrings": true,
                "ignoreComments": true,
                "ignoreTemplateLiterals": true
            }
        ]
    }
}
