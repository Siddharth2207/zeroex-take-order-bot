{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/Config",
    "definitions": {
        "Config": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "network": {
                        "type": "string",
                        "title": "Network",
                        "description": "The network name.",
                        "pattern": "[a-zA-Z0-9]+"
                    },
                    "chainId": {
                        "type": [
                            "string",
                            "number"
                        ],
                        "title": "Network Chain ID"
                    },
                    "apiUrl": {
                        "type": "string",
                        "title": "0x API URL",
                        "pattern": "^https://(.)+.api.0x.org/$"
                    },
                    "defaultRpc": {
                        "type": "string",
                        "title": "Default RPC URL"
                    },
                    "orderBookAddress": {
                        "type": "string",
                        "title": "Orderbook Contract Address",
                        "pattern": "^0x[0-9a-zA-Z]{40}$"
                    },
                    "arbAddress": {
                        "type": "string",
                        "title": "0xOrderbookFlashBorrower Contract Address",
                        "pattern": "^0x[0-9a-zA-Z]{40}$"
                    },
                    "proxyAddress": {
                        "type": "string",
                        "title": "0x Proxy Address",
                        "pattern": "^0x[0-9a-zA-Z]{40}$"
                    },
                    "nativeToken": {
                        "type": "object",
                        "properties": {
                            "symbol": {
                                "type": "string",
                                "title": "Token Symbol",
                                "pattern": "[A-Z]+"
                            },
                            "address": {
                                "type": "string",
                                "title": "Token Address",
                                "pattern": "^0x[0-9a-zA-Z]{40}$"
                            },
                            "decimals": {
                                "type": "number",
                                "title": "Token Decimals"
                            }
                        },
                        "required": [
                            "symbol",
                            "address",
                            "decimals"
                        ],
                        "additionalProperties": false,
                        "title": "Native Token of this network"
                    }
                },
                "required": [
                    "network",
                    "chainId",
                    "apiUrl",
                    "defaultRpc",
                    "orderBookAddress",
                    "arbAddress",
                    "proxyAddress",
                    "nativeToken"
                ],
                "additionalProperties": false
            }
        }
    }
}